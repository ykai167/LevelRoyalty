<UserControl x:Class="LR.WpfApp.Controls.LogsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LR.WpfApp.Controls">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ListView Name="lvwShow" Margin="0 0 10 0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="操作员" Width="75" DisplayMemberBinding="{Binding Path=Operator}" />
                    <GridViewColumn Header="数据表" Width="75" DisplayMemberBinding="{Binding Path=Table}" />
                    <GridViewColumn Header="类型" Width="75" DisplayMemberBinding="{Binding Path=Type}" />
                    <GridViewColumn Header="数据" Width="200" DisplayMemberBinding="{Binding Path=Data}" />
                    <GridViewColumn Header="创建时间" Width="75" DisplayMemberBinding="{Binding Path=CreateDate}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <local:PageControl Grid.Row="1" x:Name="ucPager"/>
    </Grid>
</UserControl>
