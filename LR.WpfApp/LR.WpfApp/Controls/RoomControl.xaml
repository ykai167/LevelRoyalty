            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="房间号"  Grid.Row="0" Grid.Column="0" Height="25" Width="65"/>
            <TextBox x:Name="txtNo" Grid.Row="0" Grid.Column="1" Height="25" Width="100"/>
            <Label Content="房间名称" Grid.Row="0" Grid.Column="2" Height="25" Width="65"/>
            <TextBox x:Name="txtName"  Grid.Row="0" Grid.Column="3" Height="25" Width="100"/>
            <Label Content="房间类型" Grid.Row="0" Grid.Column="4" Height="25" Width="65"/>
            <ComboBox x:Name="cboType" Grid.Row="0" Grid.Column="5" Height="25" Width="160"/>
            <Label Content="说明" Grid.Row="1" Grid.Column="0"  Height="25" Width="160"/>
            <TextBox x:Name="txtEfficay" Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="5" Height="26" TextWrapping="WrapWithOverflow" Margin="68,0,37,0" TextChanged="txtEfficay_TextChanged"/>
            <Button Grid.Row="0"  Grid.Column="6" Content="显示全部"/>
            <Button Grid.Row="1"  Grid.Column="6" Content="查找"/>
            <Button Grid.Row="2"  Grid.Column="6" Content="新增"/>
            <Button Grid.Row="3"  Grid.Column="6" Content="修改"/>
            <Button Grid.Row="4"  Grid.Column="6" Content="删除"/>
            
