        <ListView Grid.Row="1" Name="lvwShow" Height="320" Width="980" Margin="-75,25,0,0"
                    SelectionChanged="LvwShow_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="房间号" Width="75" DisplayMemberBinding="{Binding Path=No}" />
                    <GridViewColumn Header="名称" Width="75" DisplayMemberBinding="{Binding Path=type}"/>
                    <GridViewColumn Header="类别" Width="75" DisplayMemberBinding="{Binding Path=fare}"/>
                    <GridViewColumn Header="说明" Width="75"     DisplayMemberBinding="{Binding Path=dosetype}"/>
                    <GridViewColumn Header="状态" Width="75"     DisplayMemberBinding="{Binding Path=spec}"/>
