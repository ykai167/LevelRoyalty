<UserControl x:Class="LR.WpfApp.Controls.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LR.WpfApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="42.086" Width="575">
    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
        <Button x:Name="btnAdd"  Content="新增" Height="25" Width="60" Click="btnAdd_Click" Margin="0 0 10 0" />
        <Button x:Name="btnSave"  Content="保存" Height="25" Width="60" Click="btnSave_Click"  Margin="0 0 10 0"/>
        <Button x:Name="btnDelete" Content="删除" Height="25" Width="60" Click="btnDelete_Click"  Margin="0 0 10 0"/>
    </StackPanel>
</UserControl>
