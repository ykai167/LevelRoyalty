<Window x:Class="LR.WpfApp.InitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LR.WpfApp"
        mc:Ignorable="d"
        Title="InitWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbx" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="20" TextWrapping="Wrap"></TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="20px" Content="进入登录页面" Margin="5" Name="btnOk" Click="btnOk_Click"></Button>
            <Button Height="20px" Content="退出" Margin="5" Name="btnQuit" Click="btnQuit_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
